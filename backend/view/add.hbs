<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Registeration</title>

  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500&display=swap" rel="stylesheet">
  <style>
    body {
      background: rgb(244, 244, 244);
      min-height: 100vh;
      width: 100%;
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center center;
      background-attachment: fixed;
      overflow: hidden;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin-right: 600px;
      position: fixed;

    }

    .form-box {
      margin: 50px;
      position: relative;
      width: 500px;
      height: 600px;
      border: 2px solid rgba(255, 255, 2550.5);
      border-radius: 20px;
      padding-bottom: 50px;
      padding-left: 50px;
      padding-right: 50px;
      padding-top: 20px;
      
      display: flex;
      justify-content: center;
      align-items: center;

    }

    i {
      position: absolute;
      color: #000000;
      top: 5px;
      right: 0px;
    }

    .form-box h2 {
      color: #000000;
      text-align: center;
      font-size: 32px;
      font-family: 'Oswald', sans-serif;
    }

    .input-box {
      position: relative;
      border-radius: 10px;
      margin: 30px 0;
      width: 310px;
      border-bottom: none;

    }

    .form-box .input-box input {
      width: 100%;
      height: 30px;
      border-radius: 10px;
      border: 2px solid #fff;
      border-bottom: 2px solid #fff;
      outline: none;
      padding: 0 20px 0 5px;
    }

    input::placeholder {
      color: black;
      font-family: 'Oswald', sans-serif;
    }

    .btn {
      color: rgb(0, 0, 0);

  height: 40px;
  width: 100%;
  padding: 10px;
  margin-bottom: 50px;
  outline: none;
  border: none;
  font-size: 17px;
  cursor: pointer;
  box-shadow: 3px 0 10px rgba();
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: 'Oswald', sans-serif;
  box-sizing: border-box; /* include padding and border in width and height */
    }

    .group {
      margin-top: 10px;

      display: flex;
      text-align: center;
      justify-content: space-between;

    }

    .group span a {
      color: black;
      position: relative;
      top: 5px;
      text-decoration: none;
      font-family: 'Oswald', sans-serif;
    }

    .group a:focus {
      text-decoration: underline;
    }

    #result {
      color: #ee0000;
      position: relative;
      top: 25px;
      font-family: 'Oswald', sans-serif;
      font-weight: 600px;
    }

    .popup {
      width: 320px;
      background-color: #fff;
      border-radius: 10px;
      position: absolute;
      top: 0;
      left: 50%;
      transform: translate(-50%, -50%) scale(0);
      transition: transform .4s, top .4s;
      visibility: hidden;
      text-align: center;
      padding: 0 30px 30px;
      height: 330px;
      color: black;

    }

    #popup ion-icon {
      color: green;
      font-size: 50px;
    }

    .popup button {
      width: 100%;
      background: #00ff00;
      padding: 10px 0;
      margin-top: 50px;
      border: none;
      outline: none;
      font-size: 18px;
      color: black;
      border-radius: 6px;
      cursor: pointer;
      box-shadow: 0 0 0 2px rgba(0, 0, 0, .1);
    }

    .popup a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      letter-spacing: 2px;
    }

    .open-slide {
      top: 50%;
      transform: translate(-50%, -50%) scale(1);
      visibility: visible;
    }

    /* Nav Bar CSS */
    #topnav {
      width: 100%;

      position: relative;
      top: 0;
      left: 0;

      background-color: Black;

      font-family: Arial, sans-serif;
      font-size: 15px;
    }

    .nav-link {
      display: inline-block;
      width: 100px;
      height: 55px;
 padding: 0px 0px;
      color: White;

      text-align: center;
      line-height: 55px;

      text-decoration: none;
    }

    #logo {
      width: 120px;

      background-color: rgb(198, 181, 181);

      font-weight: bold;
    }

    #about {
      position: absolute;
      top: 0;
      right: 0;
    }

    select {
      width: 109%;
      padding: 12px 20px;
      margin: 8px 0;
      box-sizing: border-box;
      border: none;
      border-radius: 10px;
      background-color: #dbdbdb;
    }

    select::-ms-expand {
      display: none;
    }

    select::-webkit-scrollbar {
      display: none;
    }


    /* Styling the options */
    select option {
      background-color: white;
      color: black;
      font-weight: normal;
      font-size: 16px;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease-in-out;
    }

    select option:hover {
      background-color: #e6e6e6;
    }
    .styled-button {
  /* Add your desired styles here */
  background-color: #1e7674;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.styled-button:hover {
  /* Add your desired hover styles here */
  background-color: #1e7674;
}

.styled-button:active {
  /* Add your desired active (when clicked) styles here */
  background-color: #1e7674;
}

.input-field::placeholder {
  color: #999; /* Change the color of the placeholder text */
  font-weight: normal; /* Set the font weight to normal */
}

.active {
    background-color: gray;
  }

  </style>

  
</head>


<body>
  <nav id="topnav">
        <a id="logo" class="nav-link" href="#">ShopBuzz</a>
        <a class="nav-link" href="/adminechart">Dashboard</a>
        
        <a class="nav-link" href="/dashboard">View Products</a>

        {{#if loggedIn}}
        <a id="about" class="nav-link" href="/logout">Logout</a>
        {{else}}
        <a id="about" class="nav-link" href="/login">Logout</a>
        {{/if}}
    </nav>




  <div class="container">
    <div class="form-box">
      <form action="/add" name="Formfill" method="post">
        <h2>Create Product Here</h2>
        <div class="input-box">
          <i class='bx bxl-product-hunt'></i>
          <input type="text" placeholder="Enter Product ID" name="id" required class="input-field">
        </div>

        <div class="input-box">
          <i class='bx bx-check-square' ></i>
          <input type="text" placeholder="Enter Product Name" name="pname" required class="input-field">
        </div>

        <div class="input-box">
       <i class='bx bx-purchase-tag' ></i>
          <input type="number" placeholder="Enter Product Price" name="pprice" required class="input-field">
        </div>

        <div class="input-box">
          <i class='bx bxs-receipt' ></i>
          <input type="text" placeholder="Product Description" name="pdesc" required class="input-field">
        </div>

        <div class="input-box">
         <i class='bx bxs-check-shield' ></i>
          <input type="text" placeholder="Product Max Limit" name="plimit" required class="input-field">
        </div>

         <div class="input-box">
         <i class='bx bxs-check-shield' ></i>
          <input type="text" placeholder="Enter Product Quantity" name="pquantity" required class="input-field">
        </div>

        <div class="input-box">
          
         
          <select name="pcat" required onchange="handleCategoryChange(this)">
      <option value="">Select Category</option>
      <option value="Clothes">Clothes</option>
      <option value="Electronics">Electronics</option>
      <option value="Home Accessories">Home Accessories</option>
      <option value="Beauty">Beauty</option>
      <option value="Other">Other</option>
    </select>
     </div>

      <div id="otherCategoryInputBox" class="input-box" style="display: none;">
    <i class='bx bxl-product-hunt'></i>
    <input type="text" placeholder="Enter Other Category" name="pothercat" class="input-field">
  </div>
          
          
          <br><br>
       

       



          <div class="btn">
  <input type="submit" onclick="validation()" value="Add Product" class="styled-button">
</div>




      </form>
    </div>
    <div class="popup" id="popup">
      <ion-icon name="checkmark-circle-outline"></ion-icon>
      <h2>Thankyou!</h2>
      <p>You have successfully registered!</p>
      <a href="#"><button onclick="closeSlide()">OK</button></a>
    </div>



  </div>

  <script>
      function handleCategoryChange(selectElement) {
    var otherCategoryInputBox = document.getElementById("otherCategoryInputBox");
    if (selectElement.value === "Other") {
      otherCategoryInputBox.style.display = "block";
    } else {
      otherCategoryInputBox.style.display = "none";
    }
  }



    function validation() {
      if (document.Formfill.Username.value == "") {
        document.getElementById("result").innerHTML = "Enter Username*";
        return false;
      }
      else if (document.Formfill.Username.length < 6) {
        document.getElementById("result").innerHTML = "Enter atleast 6 characters*";
        return false;
      }

      else if (document.Formfill.email.value == "") {
        document.getElementById("result").innerHTML = "Enter Email Address";
        return false;
      }

      else if (document.Formfill.password.value == "") {
        document.getElementById("result").innerHTML = "Enter Password";
        return false;
      }

      else if (document.Formfill.password.length < 6) {
        document.getElementById("result").innerHTML = "Enter atleast 6 characters";
        return false;
      }

      else if (document.Formfill.cPassword.value == "") {
        document.getElementById("result").innerHTML = "Enter Confirm Password";
        return false;
      }

      else if (document.Formfill.cPassword.value !== document.Formfill.password.value) {
        document.getElementById("result").innerHTML = "Password doesn't match";
        return false;
      }

      else if (document.Formfill.cPassword.value == document.Formfill.password.value) {
        popup.classList.add("open-slide")
        return false;
      }


    }


    var popup = document.getElementById('popup');

    function closeSlide() {
      popup.classList.remove("open-slide");
    }
  </script>
</body>

</html>