<style>
    body{
   background-color: #9cc0bf;
   min-height: 100vh;
   width: 100%;
   background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  background-attachment: fixed;
  overflow: hidden;
}

.container{
       display: flex;
       justify-content: center; 
       align-items: center;
       min-height: 100vh;
       margin-right: 600px;
      position: fixed;

}

.form-box{
      margin-left: 283px;
    position: relative;
    width: 400px;
    height: 550px;
    
    backdrop-filter: blur;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 550px;
    margin-bottom: -13px;

}

i{
    position: absolute;
    color: #000000;
    top: 5px;
    right: 0px;
}

.form-box h2{
    color: #000000;
    text-align: center;
    font-size: 32px;
    font-family: 'Oswald', sans-serif;
}

.input-box{
    position: relative;
    border-radius: 10px;
    margin: 30px 0;
    width: 310px;
    border-bottom: none;
    
} 

.form-box .input-box input{
    width: 100%;
    height: 37px;
    border-radius: 10px;
    border: 2px solid #fff;
    border-bottom: 2px solid #fff;
    outline: none;
    padding: 0 20px 0 5px;
}

.active {
    background-color: gray;
  }

input::placeholder{ 
    color: black;
    font-family: 'Oswald', sans-serif;
}

.btn{
    color: rgb(0, 0, 0);
    background-color: #9cc0bf;
    
    width: 100%;
    height: 25px;
    outline: none;
    border: none;
    font-size: 17px;
    cursor: pointer;
    box-shadow: 3px 0 10px rgba();
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20px 0 5px;
    font-family: 'Oswald', sans-serif;
}

 .group{
    margin-top: 30px;
    
    display: flex;
    text-align: center;
    justify-content: space-between;

}

.group span a{
     color: black   ;
     position: relative;
     top: 5px;
     text-decoration: none;
     font-family: 'Oswald', sans-serif;
}

.group a:focus{
    text-decoration: underline;
}

#result{
    color: #ee0000;
    position: relative;
    top:25px;
    font-family: 'Oswald', sans-serif;
    font-weight: 600px;
}

.popup{
    width: 320px;
    background-color: #fff;
    border-radius: 10px;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    transition: transform .4s , top .4s;
    visibility: hidden;
    text-align: center;
    padding: 0 30px 30px;
    height: 330px;
    color: black;
    
}

#popup ion-icon{
    color: green;
    font-size: 50px;
}

.popup button{
    width: 100%;
    background: #00ff00;
    padding: 10px 0;
    margin-top: 50px;
    border: none;
    outline: none;
    font-size: 18px;
    color: black;
    border-radius: 6px;
    cursor: pointer;
    box-shadow: 0 0 0 2px rgba(0,0,0,.1);
}

.popup a{
    color: white;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 2px;
}

.open-slide{
    top: 50%;
    transform: translate(-50%, -50%) scale(1);
    visibility: visible;
}

/* Nav Bar CSS */
#topnav {
    width: 100%;
 
    position: fixed;
    top: 0;
    left: 0;
 
    background-color: Black;
 
    font-family: Arial, sans-serif;
    font-size: 15px;
 }
 
 .nav-link {
    display: inline-block;
    width: 100px;
    height: 55px;
 
    color: White;
 
    text-align: center;
    line-height: 55px;
 
    text-decoration: none;
 }
 
 #logo {
    width: 120px;
 
    background-color: rgb(198, 181, 181);
 
    font-weight: bold;
 }
 
 #about {
    position: absolute;
    top: 0;
    right: 0;
 }

select {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: none;
  border-radius: 4px;
  background-color: #f2f2f2;
}

/* Styling the dropdown arrow */
select::-ms-expand {
  display: none;
}
select::-webkit-scrollbar {
  display: none;
}


/* Styling the options */
select option {
  background-color: white;
  color: black;
  font-weight: normal;
  font-size: 16px;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease-in-out;
}
select option:hover {
  background-color: #e6e6e6;
}

.input-field::placeholder {
  color: #999; /* Change the color of the placeholder text */
  font-weight: normal; /* Set the font weight to normal */
}

 .styled-button {
  /* Add your desired styles here */
  background-color: #1e7674;
  color: white;
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.styled-button:hover {
  /* Add your desired hover styles here */
  background-color: #1e7674;
}

.styled-button:active {
  /* Add your desired active (when clicked) styles here */
