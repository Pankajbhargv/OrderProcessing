    <script>
        function validation() {
            if (document.Formfill.Username.value == "") {
                document.getElementById("result").innerHTML = "Enter Username*";
                return false;
            }
            else if (document.Formfill.Username.length < 6) {
                document.getElementById("result").innerHTML = "Enter atleast 6 characters*";
                return false;
            }

            else if (document.Formfill.email.value == "") {
                document.getElementById("result").innerHTML = "Enter Email Address";
                return false;
            }

            else if (document.Formfill.password.value == "") {
                document.getElementById("result").innerHTML = "Enter Password";
                return false;
            }

            else if (document.Formfill.password.length < 6) {
                document.getElementById("result").innerHTML = "Enter atleast 6 characters";
                return false;
            }

            else if (document.Formfill.cPassword.value == "") {
                document.getElementById("result").innerHTML = "Enter Confirm Password";
                return false;
            }

            else if (document.Formfill.cPassword.value !== document.Formfill.password.value) {
                document.getElementById("result").innerHTML = "Password doesn't match";
                return false;
            }

            else if (document.Formfill.cPassword.value == document.Formfill.password.value) {
                popup.classList.add("open-slide")
                return false;
            }

        }

        var popup = document.getElementById('popup');

        function closeSlide() {
            popup.classList.remove("open-slide");
        }

    </script>


    <script>
        function createCharts(statusOrderData, orderData, remainingData) {
            const productNames = orderData.map(item => item.product_name);
            const revenueValues = orderData.map(item => item.quantity);
            const remainingValues = remainingData.map(item => item.remaining_quantity);

            const chartWidth = 784;
            const chartHeight = 300;

            const barChart = echarts.init(document.getElementById('barChart'));
            barChart.setOption({
                title: {
                    text: 'Inventory Status of Each Product',
                },
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {
                        type: 'shadow',
                    },
                },
                xAxis: {
                    data: productNames,
                    axisLabel: {
                        interval: 0, // Display all labels
                        rotate: 0, // Rotate labels by 45 degrees
                    },
                },
                yAxis: {
                    min: 0,
                    max: 100
                }
                ,
                series: [{
                    type: 'bar',
                    data: remainingValues,
                    label: {
                        show: true,
                        position: 'top',
                        formatter: '{c}'
                    }
                }],
            });

            const doughnutChart = echarts.init(document.getElementById('doughnut'));
            doughnutChart.setOption({
                title: {
                    text: 'Orders History',
                },
                tooltip: {
                    trigger : 'item',
                    formatter: '{b}: {c}',
                },
                legend: {
                    data: ['Ordered', 'Processing', 'Cancelled', 'Processed'],
                },
                series: [{
                    name: 'Orders History',
                    type: 'pie',
                    data: [{
                        value: statusOrderData.ordered_total,
                        name: 'Ordered',
                        itemStyle: {
                            color: 'rgba(41, 155, 99, 1)',
                        },
                    }, {
                        value: statusOrderData.processing_total,
                        name: 'Processing',
                        itemStyle: {
                            color: 'rgba(54, 162, 235, 1)',
                        },
                    }, {
                        value: statusOrderData.cancelled_total,
                        name: 'Cancelled',
                        itemStyle: {
                            color: 'rgba(120, 46, 139, 1)',
                        },
                    }, {
                        value: statusOrderData.processed_total,
                        name: 'Processed',
                        itemStyle: {
                            color: 'rgba(10, 57, 145, 1)',
                        },
                    }],
                    
                }],
            });

            console.log('{b} : {c}')

            // Set chart size based on parent div dimensions
            const chartParent = document.querySelector('.chart');
            barChart.resize({
                width: chartParent.clientWidth,
                height: chartParent.clientHeight
            });
            doughnutChart.resize({
                width: chartParent.clientWidth,
                height: chartParent.clientHeight
            });
        }

        const statusOrderData = JSON.parse(decodeURIComponent('{{statusOrderData}}'));
        const ordersData = JSON.parse(decodeURIComponent('{{ordersData}}'));
        const remainingData = JSON.parse(decodeURIComponent('{{remainingData}}'));


        createCharts(statusOrderData, ordersData, remainingData);
    </script>





